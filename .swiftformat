--swiftversion 99 # latest

--enable \
	acronyms,\
	blankLinesBetweenImports,\
	blockComments,\
	emptyExtensions,\
	environmentEntry,\
	isEmpty,\
	noExplicitOwnership,\
	organizeDeclarations,\
	preferSwiftTesting,\
	redundantEquatable,\
	redundantProperty,\
	unusedPrivateDeclarations,\
	wrapEnumCases,\
	wrapMultilineConditionalAssignment,\
	wrapMultilineFunctionChains,\

--acronyms "CPU,EFI,ID,IO,JSON,NVRAM,OS,SF,SMC,UDID,UI,URL,UUID"
--condassignment always
--fractiongrouping enabled
--header "\n© {created.year} F1248 <f1248@mailbox.org>\nSee LICENSE.txt for license information.\n"
--indent tab
--indentcase true
--markcategories false
--maxwidth 128
--organizationmode type
--propertytypes inferred
--ranges no-space
--self init-only
--selfrequired error
--semicolons never
--shortoptionals always
--tabwidth 4
--typeblanklines preserve
--xcodeindentation enabled
