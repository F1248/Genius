--swift-version 99 # latest
--language-mode 99 # latest

--enable \
	acronyms, \
	blockComments, \
	isEmpty, \
	noExplicitOwnership, \
	noGuardInTests, \
	organizeDeclarations, \
	preferFinalClasses, \
	preferSwiftTesting, \
	singlePropertyPerLine, \
	sortSwitchCases, \
	unusedPrivateDeclarations, \
	validateTestCases, \
	wrapEnumCases, \
	wrapMultilineConditionalAssignment, \

--disable \
	blankLinesAtStartOfScope, \
	redundantViewBuilder, \
	wrapFunctionBodies, \
	wrapPropertyBodies, \

--acronyms "CPU,EFI,ID,IO,JSON,NVRAM,OS,SF,SMC,UDID,UI,URL,UUID"
--allow-partial-wrapping false
--cond-assignment always
--fraction-grouping enabled
--header "\n© {created.year} F1248 <f1248@mailbox.org>\nSee LICENSE.txt for license information.\n"
--indent tab
--indent-case true
--mark-categories false
--max-width 128
--organization-mode type
--property-types explicit
--ranges no-space
--redundant-async always
--redundant-throws always
--self init-only
--self-required error
--semicolons never
--short-optionals always
--tab-width 4
--type-blank-lines remove
--xcode-indentation enabled
